{
  "theme": "WoodMart",
  "description": "Real-world widget samples from WoodMart theme",
  "widgets": [
    {
      "name": "WoodMart Banner",
      "widgetType": "wd_banner",
      "description": "Banner widget with image, text overlay, and button",
      "element": {
        "elType": "widget",
        "widgetType": "wd_banner",
        "settings": {
          "image": {
            "url": "https://example.com/wp-content/uploads/banner-image.jpg",
            "id": 123
          },
          "title": "Summer Sale",
          "subtitle": "Up to 50% Off",
          "link": {
            "url": "https://example.com/shop/sale",
            "is_external": false
          },
          "button_text": "Shop Now",
          "banner_style": "default",
          "content_width": "100",
          "text_alignment": "center"
        },
        "renderedContent": "<div class=\"wd-banner\"><img src=\"https://example.com/wp-content/uploads/banner-image.jpg\" alt=\"Summer Sale\"><div class=\"banner-content\"><h3>Summer Sale</h3><p>Up to 50% Off</p><a href=\"https://example.com/shop/sale\" class=\"btn\">Shop Now</a></div></div>",
        "elements": [],
        "isInner": false
      },
      "expectedConversion": {
        "widgetType": "section",
        "description": "Should convert to section with background image and inner widgets for text and button"
      }
    },
    {
      "name": "WoodMart Info Box",
      "widgetType": "wd_info_box",
      "description": "Info box with icon, title, description, and link",
      "element": {
        "elType": "widget",
        "widgetType": "wd_info_box",
        "settings": {
          "image": {
            "value": {
              "library": "fa-solid",
              "value": "fas fa-shipping-fast"
            }
          },
          "title": "Free Shipping",
          "description": "Free shipping on orders over $50",
          "link": {
            "url": "https://example.com/shipping-info"
          },
          "style": "base",
          "alignment": "center"
        },
        "renderedContent": "<div class=\"info-box\"><i class=\"fas fa-shipping-fast\"></i><h4>Free Shipping</h4><p>Free shipping on orders over $50</p></div>",
        "elements": [],
        "isInner": false
      },
      "expectedConversion": {
        "widgetType": "icon-box",
        "description": "Should convert to Elementor icon-box widget"
      }
    },
