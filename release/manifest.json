{
  "manifest_version": 3,
  "name": "Elementor Copier",
  "version": "1.0.0",
  "description": "Copy Elementor widgets, sections, and pages from any website and paste them directly into the Elementor editor without any plugins",
  "permissions": [
    "contextMenus",
    "clipboardWrite",
    "clipboardRead",
    "activeTab",
    "storage",
    "notifications",
    "offscreen",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-v2.js"],
      "css": ["styles/highlight.css"],
      "run_at": "document_idle",
      "world": "ISOLATED"
    },
    {
      "matches": ["<all_urls>"],
      "js": [
        "content-sanitizer.js",
        "elementor-format-converter.js",
        "elementor-editor-detector.js",
        "clipboard-manager.js",
        "paste-interceptor.js",
        "editor-injector.js",
        "media-url-handler.js",
        "version-compatibility.js",
        "notification-manager.js",
        "page-bridge.js"
      ],
      "run_at": "document_idle",
      "world": "MAIN"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "styles/highlight.css",
        "elementor-format-converter.js",
        "clipboard-manager.js",
        "paste-interceptor.js",
        "elementor-editor-detector.js",
        "editor-injector.js",
        "media-url-handler.js",
        "version-compatibility.js",
        "content-sanitizer.js",
        "notification-manager.js",
        "test-module-loading.html",
        "diagnose-paste-issue.html"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "minimum_chrome_version": "109"
}
